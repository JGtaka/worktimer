<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
  <li class="breadcrumb-item active" aria-current="page">新規登録</li>
<% end %>

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 60vh;">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: "width: 300px;" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field" style="margin-bottom: 1rem;">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; height: 44px; font-size: 1rem; border-radius: 4px; border: 1px solid #ccc; padding: 0.5em;" %>
    </div>

    <div class="field" style="margin-bottom: 1rem;">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; height: 44px; font-size: 1rem; border-radius: 4px; border: 1px solid #ccc; padding: 0.5em;" %>
    </div>

    <div class="field" style="margin-bottom: 1rem;">
      <%= f.label :パスワード再入力 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; height: 44px; font-size: 1rem; border-radius: 4px; border: 1px solid #ccc; padding: 0.5em;" %>
    </div>

    <div class="actions" style="margin-bottom: 1rem;">
      <%= f.submit "新規登録", style: "width: 100%; height: 44px; background: #737373; color: #fff; border: none; border-radius: 4px; font-size: 1rem; cursor: pointer;" %>
    </div>
  <% end %>
</div>
