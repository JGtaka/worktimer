<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
  <li class="breadcrumb-item"><a href="<%= new_user_session_path %>">ログイン</a></li>
  <li class="breadcrumb-item active" aria-current="page">パスワード再設定</li>
<% end %>

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 60vh;">
  <h2>パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, style: "width: 300px;" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field" style="margin-bottom: 1rem;">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; height: 44px; font-size: 1rem; border-radius: 4px; border: 1px solid #ccc; padding: 0.5em;" %>
    </div>

    <div class="actions" style="margin-bottom: 1rem;">
      <%= f.submit "送信", style: "width: 100%; height: 44px; background: #737373; color: #fff; border: none; border-radius: 4px; font-size: 1rem; cursor: pointer;" %>
    </div>
  <% end %>
</div>
